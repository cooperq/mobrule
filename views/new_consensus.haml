%h1 Create a new topic to consense about.
.consensus-form
  %form{:method=>'post', :action=>'/consensus/new'}
    %p.form-field
      Title: 
      %input{:type=>'text', :name=>'title'}
    %p.form-field
      Description: 
      %br
      %textarea{:name=>'description'}
    %p.form-field
      Stand Aside Limit:
      %input{:type=>'text', :name=>'tolerance', :length=>3}
      .helptext How many people can stand aside before a topic is blocked.
    %p.form-field
      Vote Limit 
      %input{:type=>'text', :name=>'needed_votes', :length=>3}
      .helptext How many people must vote before a consensus is reached.
    %p.form-field
      Email Address: 
      %input{:type=>'text', :name=>'contact_email'}
    %p.form-field
      Permalink: 
      %input{:type=>'text', :name=>'permalink'}
    %p.form-field
      %input{:type=>'submit', :value=>'create topic!'}
    %p.form-field
      Make this topic private? 
      %input{:type=>'checkbox', :value=>'SELECTED', :name=>'private'}
